<h3>Favourites</h3>

<% @fav.each do |fav| %>
  <% if fav.category == "News" || fav.category == "Reddit" %>
    <% array = JSON.parse(fav.content) %>
    <a href="<%=  array[0] %>"><%=  array[1]%></a></br>
    <a href="<%=  array[2] %>"><%=  array[3]%></a></br>
    <a href="<%=  array[4] %>"><%=  array[5]%></a></br>
  <% elsif fav.category =="Giphy" || fav.category == "Yes/No" %>
    <img src="<%= fav.content %>" >
  <% else %>
    <p><%= fav.category %></p>
    <p><%= fav.content %></p>
  <% end %>

<% end  %>
